@model Proyecto_GestionGF.Models.MotivoRechazoModel
@{
    ViewData["Title"] = "Motivo rechazo de solicitud";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="gf-dashboard-body">

    <header class="gf-header">
        <div class="gf-header-top">
            <div class="gf-logo-wrapper">
                <img src="@Url.Content("~/img/logoGF.png")" alt="Logo Grupo Fiesler" class="gf-logo-img" />
            </div>
        </div>
        <div class="gf-header-bar">
            <span class="gf-header-bar-text">Calidad y servicio que marcan la diferencia</span>
        </div>
    </header>

    <div class="gf-main-layout">
        <main class="gf-content" style="max-width:900px;margin:0 auto;">
            <div class="gf-content-header">
                <div>
                    <h1 class="gf-page-title">Rechazar solicitud #@Model.IdSolicitud</h1>
                    <p class="gf-page-subtitle">Indique el motivo del rechazo. Este comentario será notificado al usuario.</p>
                </div>
            </div>

            <section class="gf-form-card">
                <form asp-action="Rechazar" asp-controller="Solicitud" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="IdSolicitud" />

                    <div class="gf-form-group gf-form-group-full">
                        <label class="gf-label" asp-for="MotivoRechazo">Motivo del rechazo</label>
                        <textarea asp-for="MotivoRechazo" class="gf-textarea" rows="4"
                                  placeholder="Falta documento de respaldo, fechas incorrectas, etc."></textarea>
                        <span asp-validation-for="MotivoRechazo" class="text-danger"></span>
                    </div>

                    <div class="gf-form-actions">
                        <a class="gf-btn gf-btn-secondary" asp-controller="Home" asp-action="Main">Cancelar</a>
                        <button type="submit" class="gf-btn gf-btn-primary">Confirmar rechazo</button>
                    </div>
                </form>
            </section>

            <partial name="_ValidationScriptsPartial" />
        </main>
    </div>

    <footer class="gf-footer">
        <span>© @DateTime.Now.Year Grupo Fiesler | Gestión GF</span>
    </footer>

</body>
</html>

