@model Proyecto_GestionGF.Models.UsuarioDashboardModel
@{
    ViewData["Title"] = "Panel de Usuario";
    var nombre = Model?.Nombre ?? "Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="gf-dashboard-body">

    <!-- HEADER -->
    <header class="gf-header">
        <div class="gf-header-top">
            <div class="gf-logo-wrapper">
                <img src="@Url.Content("~/img/logoGF.png")"
                     alt="Logo Grupo Fiesler"
                     class="gf-logo-img" />
            </div>
        </div>

        <div class="gf-header-bar">
            <span class="gf-header-bar-text">
                Calidad y servicio que marcan la diferencia
            </span>
        </div>
    </header>


    <div class="gf-main-layout">
        <!-- SIDEBAR USUARIO -->
        <aside class="gf-sidebar">
            <div class="gf-sidebar-title">Gestión GF</div>
            <nav class="gf-nav">
                <ul class="gf-nav-list">
                    <li><a class="gf-nav-link gf-nav-link-active" asp-controller="Home" asp-action="MainUsuario">Mi panel</a></li>
                    <li><a class="gf-nav-link" asp-controller="Solicitud" asp-action="CrearSolicitud">Nueva solicitud</a></li>
                    <li><a class="gf-nav-link" asp-controller="Solicitud" asp-action="MisSolicitudes">Mis solicitudes</a></li>
                    <li><a class="gf-nav-link" asp-controller="Home" asp-action="Index">Cerrar sesión</a></li>
                </ul>
            </nav>
        </aside>

        <!-- CONTENIDO -->
        <main class="gf-content">
            <div class="gf-content-header">
                <div>
                    <h1 class="gf-page-title">Hola, @nombre</h1>
                    <p class="gf-page-subtitle">Este es tu panel. Podés crear y dar seguimiento a tus permisos.</p>
                </div>
                <div class="gf-user-info">
                    <a class="gf-link" asp-controller="Notificacion" asp-action="Index" title="Notificaciones">
                        🔔
                        @if (Model.NotificacionesNoLeidas > 0)
                        {
                            <span style="margin-left:6px; font-weight:700;">(@Model.NotificacionesNoLeidas)</span>
                        }
                    </a>
                    <span class="gf-user-name">@nombre</span>
                    <a class="gf-link gf-link-logout" asp-controller="Home" asp-action="Index">Cerrar sesión</a>
                </div>
            </div>

            @if (TempData["Ok"] != null)
            {
                <div class="gf-alert gf-alert-success">@TempData["Ok"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="gf-alert gf-alert-error">@TempData["Error"]</div>
            }

            <!-- KPIs-->
            <section class="gf-kpi-grid">
                <article class="gf-kpi-card">
                    <h2 class="gf-kpi-label">Pendientes</h2>
                    <p class="gf-kpi-value">-</p>
                    <span class="gf-kpi-helper">En revisión</span>
                </article>
                <article class="gf-kpi-card">
                    <h2 class="gf-kpi-label">Aprobados</h2>
                    <p class="gf-kpi-value">-</p>
                    <span class="gf-kpi-helper">Histórico</span>
                </article>
                <article class="gf-kpi-card">
                    <h2 class="gf-kpi-label">Rechazados</h2>
                    <p class="gf-kpi-value">-</p>
                    <span class="gf-kpi-helper">Histórico</span>
                </article>
                <article class="gf-kpi-card">
                    <h2 class="gf-kpi-label">Próximos</h2>
                    <p class="gf-kpi-value">-</p>
                    <span class="gf-kpi-helper">En próximos 7 días</span>
                </article>
            </section>

            <!-- Tabla de últimas solicitudes -->
            <section class="gf-table-section">
                <div class="gf-table-header-row">
                    <h2 class="gf-section-title">Mis últimas solicitudes</h2>
                    <div class="gf-table-actions">
                        <a class="gf-btn gf-btn-outline" asp-controller="Solicitud" asp-action="MisSolicitudes">Ver más</a>
                        <a class="gf-btn gf-btn-primary" asp-controller="Solicitud" asp-action="CrearSolicitud">Crear</a>
                    </div>
                </div>

                <div class="gf-table-wrapper">
                    <table class="gf-table">
                        <thead>
                            <tr>
                                <th>Nº</th>
                                <th>Tipo</th>
                                <th>Fecha inicio</th>
                                <th>Fecha fin</th>
                                <th>Estado</th>
                                <th>Motivo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model?.UltimasSolicitudes == null || Model.UltimasSolicitudes.Count == 0)
                            {
                                <tr>
                                    <td colspan="6">No tenés solicitudes registradas.</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var s in Model.UltimasSolicitudes)
                                {
                                    <tr>
                                        <td>@s.IdSolicitud</td>
                                        <td>@s.TipoPermiso</td>
                                        <td>@s.FechaInicio.ToString("dd-MM-yyyy")</td>
                                        <td>@s.FechaFinal.ToString("dd-MM-yyyy")</td>

                                        <td>
                                            @if (s.Estado == 0)
                                            {
                                                <span class="gf-badge gf-badge-pending">Pendiente</span>
                                            }
                                            else if (s.Estado == 1)
                                            {

                                                <span class="gf-badge gf-badge-approved">Aprobado</span>
                                            }
                                            else if (s.Estado == 2)
                                            {

                                                <span class="gf-badge gf-badge-rejected" title="@s.MotivoRechazo">Rechazado</span>
                                            }
                                            else
                                            {

                                                <span class="gf-badge">Cancelado</span>
                                            }
                                        </td>
                                        <td>@s.Motivo</td>


                                        <td>
                                            <div style="display:flex; gap:8px; flex-wrap:wrap;">
                                                @if (!string.IsNullOrWhiteSpace(s.ArchivoFile))
                                                {
                                                    <a class="gf-btn gf-btn-outline" href="@s.ArchivoFile" target="_blank">Adjunto</a>
                                                }

                                                @if (s.Estado == 0)
                                                {
                                                    <form asp-controller="Solicitud" asp-action="Cancelar" method="post" style="display:inline;"
                                                          onsubmit="return confirm('¿Seguro que deseas cancelar esta solicitud?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="idSolicitud" value="@s.IdSolicitud" />
                                                        <button type="submit" class="gf-btn gf-btn-secondary">Cancelar</button>
                                                    </form>
                                                }
                                                else if (s.Estado == 2 && !string.IsNullOrWhiteSpace(s.MotivoRechazo))
                                                {
                                                    <span class="gf-table-link" title="@s.MotivoRechazo">Ver motivo</span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </main>
    </div>

    <footer class="gf-footer">
        <span>© @DateTime.Now.Year Grupo Fiesler | Gestión GF</span>
    </footer>
</body>
</html>

